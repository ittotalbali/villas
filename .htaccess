<IfModule mod_rewrite.c>
  Options -MultiViews
  RewriteEngine On
  RewriteBase /villa  # Your subdir (e.g., /villanew for totalbali.com/villanew)

  # Skip /property/* (let property/.htaccess handle PHP rewrites)
  RewriteCond %{REQUEST_URI} ^/property/
  RewriteRule ^ - [L]

  # Skip if file or dir exists (covers assets, index.html; no symlink/OR chain to avoid false skips)
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . index.html [L]
</IfModule>