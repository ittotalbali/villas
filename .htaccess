<IfModule mod_rewrite.c>
  Options -MultiViews
  RewriteEngine On

  # Handle PHP project at /villa/property
  RewriteCond %{REQUEST_URI} ^/villa/property/
  RewriteRule ^ - [L] # Let Apache handle this path normally

  # Handle React app at /villa - send all requests to index.html
  RewriteCond %{REQUEST_URI} ^/villa/
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^villa/.* /villa/index.html [L]

  # Redirect root to /villa if needed
  RewriteRule ^$ /villa/ [R=301,L]
</IfModule>